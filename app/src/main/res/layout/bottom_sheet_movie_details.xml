<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_movie_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_20"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/background_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_36">

        <TextView
            android:id="@+id/tv_movie_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_films"
            android:textSize="@dimen/font_size_10"
            android:paddingVertical="1dp"
            android:paddingHorizontal="9dp"
            android:layout_marginStart="@dimen/dimen_20"
            android:background="@drawable/movie_genre_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movie_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_release_date"
            android:textSize="@dimen/font_size_12"
            android:layout_marginStart="@dimen/dimen_24"
            app:layout_constraintStart_toEndOf="@id/tv_movie_genre"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_movie_genre" />

        <TextView
            android:id="@+id/tv_movie_age_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_age_rating_18"
            android:textSize="@dimen/font_size_14"
            android:gravity="center"
            android:background="@drawable/movie_age_rating_outline"
            android:layout_marginEnd="@dimen/dimen_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_release_date"
            app:layout_constraintBottom_toTopOf="@id/tv_movie_title" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_title"
            android:textSize="@dimen/font_size_20"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_release_date" />

        <ImageView
            android:id="@+id/rating_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating_filled_star_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginStart="@dimen/dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_title" />

        <ImageView
            android:id="@+id/rating_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating_filled_star_16"
            app:layout_constraintStart_toEndOf="@id/rating_star_1"
            app:layout_constraintTop_toTopOf="@id/rating_star_1" />

        <ImageView
            android:id="@+id/rating_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating_filled_star_16"
            app:layout_constraintStart_toEndOf="@id/rating_star_2"
            app:layout_constraintTop_toTopOf="@id/rating_star_2" />

        <ImageView
            android:id="@+id/rating_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating_filled_star_16"
            app:layout_constraintStart_toEndOf="@id/rating_star_3"
            app:layout_constraintTop_toTopOf="@id/rating_star_3" />

        <ImageView
            android:id="@+id/rating_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating_outline_star_16"
            app:layout_constraintStart_toEndOf="@id/rating_star_4"
            app:layout_constraintTop_toTopOf="@id/rating_star_4" />

        <TextView
            android:id="@+id/tv_movie_description"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_8"
            android:text="@string/wrath_of_man_description"
            android:textSize="@dimen/font_size_14"
            android:layout_marginStart="@dimen/dimen_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_star_1" />

        <TextView
            android:id="@+id/tv_movie_actors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actors"
            android:textSize="@dimen/font_size_16"
            android:layout_marginTop="@dimen/dimen_36"
            android:layout_marginStart="@dimen/dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_description" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/dimen_16"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_actors">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_actor_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_10"
                    app:cardElevation="@dimen/dimen_0"
                    android:layout_marginStart="@dimen/dimen_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iv_actor_1"
                        android:layout_width="@dimen/dimen_150"
                        android:layout_height="@dimen/dimen_196"
                        android:src="@drawable/actor_statham"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_actor_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actor_statham"
                    android:textSize="@dimen/font_size_12"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_12"
                    app:layout_constraintTop_toBottomOf="@id/cv_actor_1"
                    app:layout_constraintStart_toStartOf="@id/cv_actor_1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_actor_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_10"
                    app:cardElevation="@dimen/dimen_0"
                    android:layout_marginStart="@dimen/dimen_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cv_actor_1">

                    <ImageView
                        android:id="@+id/iv_actor_2"
                        android:layout_width="@dimen/dimen_150"
                        android:layout_height="@dimen/dimen_196"
                        android:src="@drawable/actor_mccallany"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_actor_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actor_mccallany"
                    android:textSize="@dimen/font_size_12"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_12"
                    app:layout_constraintTop_toBottomOf="@id/cv_actor_2"
                    app:layout_constraintStart_toStartOf="@id/cv_actor_2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_actor_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_10"
                    app:cardElevation="@dimen/dimen_0"
                    android:layout_marginHorizontal="@dimen/dimen_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cv_actor_2"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/iv_actor_3"
                        android:layout_width="@dimen/dimen_150"
                        android:layout_height="@dimen/dimen_196"
                        android:src="@drawable/actor_hartnett"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_actor_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actor_hartnett"
                    android:textSize="@dimen/font_size_12"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_12"
                    app:layout_constraintTop_toBottomOf="@id/cv_actor_3"
                    app:layout_constraintStart_toStartOf="@id/cv_actor_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>